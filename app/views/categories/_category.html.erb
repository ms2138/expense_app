<div id="<%= dom_id category %>">
  <div class="row">
    <div class="col me-auto pb-4" id="<%= dom_id category %>">
      <div class="card">
        <div class="card-body">
          <div class="card-text d-flex align-items-center justify-content-between">
            <b><%= category.name %></b>
            <span>
              <% if policy(category).edit? %>
                <%=link_to "Edit", edit_category_path(category), data: { turbo_frame: "modal" } %>
              <% end %> 
              |
              <% if policy(category).destroy? %>
                <%=link_to "Delete", category, 
                          data: { turbo_method: :delete, turbo_confirm: 'Are you sure? Deleting this category will also delete all associated transactions' } %>
              <% end %>
            </span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
